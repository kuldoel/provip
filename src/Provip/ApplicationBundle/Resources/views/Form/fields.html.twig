{% block form_widget_simple %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endblock form_widget_simple %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <span class="text-danger">{{ error.message }}</span><br />
            {% endfor %}

        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}


{% block form_row %}
    <div class="row row-form{% if form.vars.errors|length %}has-error{% endif %}">
        {{ form_label(form, label|default(null), { 'label_attr': { 'class': 'col col-lg-3 control-label' } }) }}
        <div class="col col-lg-9">
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock form_row %}