{% block user_menu %}
    <ul class="dropdown-menu">
        <li><a href="{{ path('provip_application_hei_settings') }}">Settings</a></li>
        <li class="divider"></li>
        <li><a href="{{ path('provip_application_default_heidocumentation') }}">Help</a></li>
        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
    </ul>
{% endblock %}


{% block modal %}

    <!-- .modal -->
    <div id="new-hei-update" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i></button>
                    <h4 class="modal-title" id="myModalLabel">Status Update</h4>
                </div>

                <div class="modal-body">

                    <div class="errors">

                    </div>

                    <p class="text-small">This will be visible for all current students and study program staff members</p>

                    <form class="form-horizontal hei-update-form" method="POST">

                        <div class="activity-update-form">

                        </div>

                    </form>


                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-small btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-small btn-primary hei-activity-update">Post</button>
                </div>
            </div><!-- /.modal-content -->
        </div>
    </div>

    <!-- / .modal -->
{% endblock %}
